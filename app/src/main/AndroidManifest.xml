<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.MyTestApplication2"
        tools:targetApi="31">
        <receiver android:name=".notifications.AlertReceiver" />

        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".TermsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".AssessmentsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".NoteActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".AddCourseActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".AddTermActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".AddAssessmentActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
        <activity
            android:name=".DetailTermActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplicationNoActionBar"></activity>
        <activity
            android:name=".DetailCourseActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Base.Theme.MyTestApplicationNoActionBar"></activity>
        <activity
            android:name=".DetailAssessmentActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Base.Theme.MyTestApplicationNoActionBar"></activity>
        <activity
            android:name=".ManageAlertActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.MyTestApplication2"></activity>
    </application>
</manifest>